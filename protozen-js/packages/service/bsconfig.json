{
  "name": "@protozen/service",
  "$schema": "https://raw.githubusercontent.com/rescript-lang/rescript-compiler/master/docs/docson/build-schema.json",
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    },
    {
      "dir": "dist",
      "subdirs": false
    }
  ],
  "package-specs": [
    {
      "module": "es6",
      "in-source": true
    }
  ],
  "suffix": ".bs.js",
  "namespace": true,
  "bs-dependencies": [
    "@ryyppy/rescript-promise",
    "@glennsl/bs-jest",
    "rescript-logger"
  ],
  "ppx-flags": ["rescript-logger/ppx"],
  "reason": { "react-jsx": 3 },
  "warnings": {
    "error": "+101"
  },
  "refmt": 3
}
